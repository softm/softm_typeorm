{
    "entryFile": "./src/app.ts",
    "spec": {
        "outputDirectory": "./doc",
        "basePath": "/apis",
        "name": "vitafit api",
        "additionalProperties": false,
        "produces": ["application/json"]
    },
    "routes": {
        "controllerPathGlobs": ["./src/controllers/**/*.ts"],
        "basePath": "/apis",
        "baseDir": "/",
        "routesDir": "./src/routes",
        "additionalProperties": false,
        "middleware": "express"
    },
    "ignore": ["**/node_modules/**"]
}
